<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DecimalTextView">
        <!-- 数字符号 默认¥ -->
        <attr name="decimal_symbol" format="string" />
        <!-- 数字符号的字体大小 默认与字体大小一致(-1) -->
        <attr name="decimal_symbol_size" format="dimension" />
        <!-- 是否显示数字符号 默认true -->
        <attr name="decimal_show_symbol" format="boolean" />
        <!-- 是否显示数字分号 默认false -->
        <attr name="decimal_show_commas" format="boolean" />
        <!-- 上限数字 默认1000000 -->
        <attr name="decimal_upper" format="float" />
        <!-- 小数点后位数 默认2位 -->
        <attr name="decimal_scale" format="integer" />
        <!-- 小数点后是否用0填充 默认false -->
        <attr name="decimal_fill_zero" format="boolean" />
    </declare-styleable>
    <declare-styleable name="DecimalEditText">
        <attr name="decimal_symbol" />
        <attr name="decimal_symbol_size" />
        <attr name="decimal_show_symbol" />
        <attr name="decimal_show_commas" />
        <attr name="decimal_upper" />
        <attr name="decimal_scale" />
        <attr name="decimal_fill_zero" />
    </declare-styleable>
</resources>